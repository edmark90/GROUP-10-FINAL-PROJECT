<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Black and White Theme - Night Mode -->
    <style name="Theme.StudyBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors - Black and White -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_black</item>
        <item name="colorSurface">@color/surface_black</item>
        <item name="colorOnSurface">@color/text_primary_white</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Card and elevation -->
        <item name="cardViewStyle">@style/CardViewStyle</item>
    </style>
</resources>